<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="فلترة الوقت (ثواني)"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/filterTime"
        android:inputType="number"
        android:hint="أدخل الحد الأدنى للوقت"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="فلترة المبلغ (دولار)"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/filterAmount"
        android:inputType="numberDecimal"
        android:hint="أدخل الحد الأدنى للمبلغ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="اختر صوت التنبيه"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/soundGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/soundBravo"
            android:text="برافو أبو أيهم!"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/soundMa3lem"
            android:text="إنتا معلم"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <Button
        android:id="@+id/startServiceBtn"
        android:text="تشغيل الخدمة"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/stopServiceBtn"
        android:text="إيقاف الخدمة"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false" />

</LinearLayout>
